<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/space_160dp"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:elevation="@dimen/space_16dp"
    app:cardCornerRadius="@dimen/space_10dp"
    android:layout_marginTop="@dimen/space_10dp"
    android:layout_gravity="center_horizontal"
    app:cardUseCompatPadding="true"
    tools:context=".ui.home.views.CatClassItemFragment"
    style="@style/CardView"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_item_category"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/id_cat"
            android:background="@drawable/ic_sound"
            android:textColor="@color/white"
            android:layout_width="@dimen/space_25dp"
            android:layout_height="@dimen/space_25dp"
            android:layout_marginEnd="@dimen/space_4dp"
            android:layout_marginBottom="@dimen/space_4dp"
            android:layout_marginStart="@dimen/space_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_separator"
            />

        <ImageView
            android:id="@+id/img_cat"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_100dp"
            android:src="@drawable/alphabet"
            android:layout_marginTop="@dimen/space_16dp"
            android:layout_marginBottom="@dimen/space_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/v_separator"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_name_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/blue"
            tools:text ="Abecedario"
            android:layout_marginStart="@dimen/space_25dp"
            android:layout_marginTop="@dimen/space_4dp"
            android:layout_marginBottom="@dimen/space_4dp"
            app:layout_constraintTop_toBottomOf="@id/v_separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <View
            android:id="@+id/v_separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_2dp"
            android:background="@color/blue"
            android:alpha=".35"
            android:layout_marginTop="@dimen/space_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_cat"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>